{% set page = fs_query({
	table: "page",
	recordId: rootId,
	debug: false,
}) %}

{% extends "layouts/default.twig" %}

{% block head %}
	{% set defaultShare = {
		title: page.og_title_lng|default(page.title_lng ~ ' | ' ~ settings.site_name),
		description: page.og_description_lng,
		url: fs_link({}),
		image: fs_src(page.og_image, 1200) ? fs_src(page.og_image, 1200) : null,
		noindex: page.noindex,
	} %}

	{{ include('partials/share-metas.twig', defaultShare) }}

	<title>{{ page.title_lng }} | {{ settings.site_name }}</title>
{% endblock head %}

{% block content %}
	{{ include('content-blocks/content-block.twig') }}
{% endblock content %}