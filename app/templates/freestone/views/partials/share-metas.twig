
<meta name="fb:app_id" content="{{ settings.facebook_appid }}" />
<meta name="twitter:text:description" content="{{ title ? title : tx.share.twitter }}" />
<meta property="og:type"  content="article" />
<meta property="og:description" content="{{ description ? description : tx.share.facebook }}" />

<meta property="og:url" content="{{ fs_link({}) }}" />
<meta property="og:title" content="{{ title ? title : tx.share.title }}" />
<meta property="og:image" content="{{ image ? image : 'https:' ~ dir ~ tx.share.image }}" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
