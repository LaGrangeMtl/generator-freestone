{% set blockType = headerType ? headerType : '' %}
{% set reverseClass = contentBlock.is_reverse ? 'reverse' : '' %}
{% set bgalign = contentBlock.text_align == 'left' ? 'right' : contentBlock.text_align == 'center' ? 'center' : 'left' %}

<header	class="header {{ reverseClass }}">
    <div class="container-fluid">
        <div class="row header-wrapper {{ blockType }}">
            {% if contentBlock.background_image %}
                <div class="bg bg-align-{{bgalign}}" style="background-image: url('{{ fs_src(contentBlock.background_image) }}');"></div>
            {% endif %}

            <div class="col-xl-4 col-md-5 col-sm-6 offset-sm-1 content {{ contentBlock.text_align }}">
                {% if contentBlock.upper_logo_lng %}
                    {{ fs_img(contentBlock.upper_logo_lng) }}
                {% endif %}

                {% if contentBlock.title_lng %}
                    <h1>{{ contentBlock.title_lng }}</h1>
                {% endif %}

                {% if contentBlock.link_lng %}
                    <div class="btn-container">
                        <a href="{{contentBlock.link_lng}}" class="button-flat-reverse" {% if contentBlock.link_lng|isExternal %}target="_blank" rel="noopener"{% endif %}>{{contentBlock.link_label_lng}}</a>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</header>
