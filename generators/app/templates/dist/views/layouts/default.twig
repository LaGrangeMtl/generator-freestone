<!doctype html>
<html class="no-js" lang="{{ lang_specific }}">
	<head>
		{{ include('partials/head.twig') }}

		{% block head %}
			<title>{{ settings.site_name }}</title>
		{% endblock head %}
	</head>
	<body class="{{ bodyClass }}">
		<main class="{% block mainclass %}{% endblock mainclass %}" data-barba="wrapper">
			{{ include('menu/head-menu.twig') }}

			<div class="wiper active" data-wiper>
				<!-- anything related to page transitions here -->
			</div>
	
			<div class="barba-container" data-main data-barba="container">
				{% block content %}
					
				{% endblock content %}

				{{ include('partials/footer.twig') }}
			</div>
	
			{{ include('partials/footer-scripts.twig') }}
		</main>
	</body>
</html>